@model DogGo.Models.ViewModels.WalkerViewModel

@{
    ViewData["Title"] = "Details";
}

    <div>
        <h1 class="mb-4">Walker Profile</h1>

        <section class="container">
            <img style="width:100px;float:left;margin-right:20px"
                 src="@Model.Walker.ImageUrl" alt="profile photo" />
            <div>
                <label class="font-weight-bold">Name:</label>
                <span>@Model.Walker.Name</span>
            </div>
            <div>
                <label class="font-weight-bold">Neighborhood:</label>
                <span>@Model.Walker.Neighborhood.Name</span>
            </div>
            <div>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Walker.Id })
                @Html.ActionLink("Delete", "Delete", new { id = Model.Walker.Id })
            </div>
        </section>

        <hr class="mt-5" />
        <div class="clearfix"></div>

        <div class="row">
            <section class="col-8 container mt-5">
                <h1 class="text-left">Recent Walks</h1>

                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.Raw("Date")
                            </th>
                            <th>
                                @Html.Raw("Client")
                            </th>
                            <th>
                                @Html.Raw("Duration")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Walk walk in Model.Walks)
                        {
                            <tr>
                                <td>
                                    @Html.Raw(walk.Date.ToString("MM/dd/yyyy"))
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => walk.Dog.Owner.Name)
                                </td>
                                <td>
                                    @Html.Raw(TimeSpan.FromSeconds(walk.Duration).ToString())
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </section>

            <section class="col-lg-4 col-md-8 container mt-5">
                <h1>Total Walk Time: @TimeSpan.FromSeconds(@Model.TotalWalkTime)</h1>
            </section>
        </div>
    </div>


